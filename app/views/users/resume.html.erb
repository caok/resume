<%= link_to 'Back', users_path %>

<div id='user'>
  <p>
    <b>Name:</b>
    <%= @user.name %>
  </p>

  <p>
    <b>Github name:</b>
    <%= @user.github_name %>
  </p>
</div>

<div id='per_infos'>
  <% @per_infos.each do |info| %>
    <p>
    <b><%= info.title %></b>
      <%= info.category %>
      <%= info.content %>
    </p>
  <% end %>
</div>

<div id='skills'>
  <% @skills.each do |skill| %>
    <p>
    <b><%= skill.title %></b>
      <%= skill.category %>
      <%= skill.content %>
    </p>
  <% end %>
</div>

<div id='projects'>
  <div class='timeline'>
  <div class="line"></div>

  <div class="year first"><span><%= year = Date.today.year %></span></div>
  <% @projects.each do |project| %>
    <%- if year == project.created_at.year -%>
      <div class='entry'>
    <%- else -%>
      <%- year = project.created_at.year -%>
      <div class="year first"><span><%= year %></span></div>
      <div class='entry offset-first'>
    <%- end -%>
        <a class='dark no-decor' target='_blank' href="<%= project.url %>">
          <p class='meta'><%= project.happened_at %></p>
          <h2><%= project.name %></h2>
          <span class='desc'><%= project.introduction %></span>
        </a>
      </div>
  <% end %>
</div>
</div>

